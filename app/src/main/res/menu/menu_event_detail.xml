<?xml version="1.0" encoding="utf-8"?><!-- Menu for EventDetailFragment Toolbar -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Edit Event Action -->
    <item
        android:id="@+id/action_edit_event"
        android:icon="@drawable/ic_rounded_edit_24"
        android:title="@string/action_edit"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="ifRoom" />

    <!-- Share Event Action -->
    <item
        android:id="@+id/action_share_event"
        android:icon="@drawable/ic_rounded_share_24"
        android:title="@string/action_share"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="ifRoom" />



    <!-- Delete Event -->
    <item
        android:id="@+id/action_delete_event"
        android:icon="@android:drawable/ic_menu_delete"
        android:title="@string/action_delete"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="never" />

    <!-- Copy Event Details -->
    <item
        android:id="@+id/action_copy_details"
        android:icon="@android:drawable/ic_menu_manage"
        android:title="@string/action_copy_details"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="never" />

    <!-- Duplicate Event -->
    <item
        android:id="@+id/action_duplicate_event"
        android:icon="@android:drawable/ic_menu_edit"
        android:title="@string/action_duplicate"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="never" />

    <!-- Export Event -->
    <item
        android:id="@+id/action_export_event"
        android:icon="@android:drawable/ic_menu_save"
        android:title="@string/export_event"
        android:visible="false"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="never"
        tools:visible="true" />

    <!-- Lets wait for a bit -->
    <!-- Add to Calendar Action -->
    <item
        android:id="@+id/action_add_to_calendar"
        android:icon="@drawable/ic_rounded_calendar_add_on_24"
        android:title="@string/add_to_calendar_app"
        android:visible="false"
        app:iconTint="?attr/colorOnPrimary"
        app:showAsAction="never" />

</menu>