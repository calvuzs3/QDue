<?xml version="1.0" encoding="utf-8"?>
<!-- res/menu/drawer_extended_menu.xml -->
<!-- Extended drawer menu with grouped sections for phone portrait -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="navigation_view">

    <!-- ACCOUNT GROUP -->
    <group
        android:id="@+id/group_account"
        android:checkableBehavior="none">

        <item
            android:id="@+id/nav_user_profile"
            android:icon="@drawable/ic_rounded_person_24"
            android:title="@string/nav_user_profile"
            android:contentDescription="@string/nav_user_profile" />

    </group>

    <!-- CONTENT GROUP -->
    <group
        android:id="@+id/group_events"
        android:checkableBehavior="none">

        <item
            android:id="@+id/nav_events"
            android:icon="@drawable/ic_rounded_event_24"
            android:title="@string/nav_events"
            android:contentDescription="@string/nav_events" />

    </group>

    <!-- SETTINGS GROUP -->
    <group
        android:id="@+id/group_settings"
        android:checkableBehavior="none">

        <item
            android:id="@+id/nav_settings"
            android:icon="@drawable/ic_rounded_settings_24"
            android:title="@string/menu_title_settings"
            android:contentDescription="@string/menu_title_settings" />
    </group>
    <group
        android:id="@+id/group_about"
        android:checkableBehavior="none">
        <item
            android:id="@+id/nav_about"
            android:icon="@drawable/ic_rounded_info_24"
            android:title="@string/menu_title_about"
            android:contentDescription="@string/menu_title_about" />

    </group>

</menu>