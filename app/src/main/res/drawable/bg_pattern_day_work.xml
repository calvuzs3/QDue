<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_pattern_day_work.xml
    Background drawable for work day pattern items.

    Features:
    - Rounded corners
    - Light background for work days
    - Subtle border
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/work_day_background" />

    <stroke
        android:width="1dp"
        android:color="@color/work_day_border" />

    <corners android:radius="8dp" />

</shape>