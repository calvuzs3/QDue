<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_pattern_day_rest.xml
    Background drawable for rest day pattern items.

    Features:
    - Rounded corners
    - Light purple background for rest days
    - Distinctive border color
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/rest_day_item_background" />

    <stroke
        android:width="1dp"
        android:color="@color/rest_day_border" />

    <corners android:radius="8dp" />

</shape>