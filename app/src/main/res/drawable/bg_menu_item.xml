<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bg_menu_item.xml -->
<!-- Background for individual menu items with states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/floatingMenuSelected" />
            <corners android:radius="@dimen/radius_sm" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/floatingMenuSelected" />
            <corners android:radius="@dimen/radius_sm" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/floatingMenuSelected" />
            <corners android:radius="@dimen/radius_sm" />
            <stroke
                android:width="@dimen/spacing_xxs"
                android:color="?attr/floatingMenuPrimary" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
<!--            <solid android:color="@android:color/transparent" />-->
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/radius_sm" />
        </shape>
    </item>

</selector>