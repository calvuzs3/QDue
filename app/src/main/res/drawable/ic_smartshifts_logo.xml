<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="120dp"
    android:height="120dp"
    android:viewportWidth="120"
    android:viewportHeight="120">

    <!-- Background Circle -->
    <path
        android:pathData="M60,60 m-50,0 a50,50 0,1 1,100 0 a50,50 0,1 1,-100 0"
        android:fillColor="@android:color/white"
        android:strokeColor="?attr/colorPrimary"
        android:strokeWidth="4" />

    <!-- Clock Face Markers -->
    <group android:name="clock_markers">
        <!-- 12 o'clock -->
        <path
            android:pathData="M60,20 L60,28"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <!-- 6 o'clock -->
        <path
            android:pathData="M60,92 L60,100"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <!-- 3 o'clock -->
        <path
            android:pathData="M92,60 L100,60"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <!-- 9 o'clock -->
        <path
            android:pathData="M20,60 L28,60"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <!-- Hour markers -->
        <path
            android:pathData="M35.86,35.86 L41.52,41.52"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <path
            android:pathData="M84.14,35.86 L78.48,41.52"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <path
            android:pathData="M84.14,84.14 L78.48,78.48"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

        <path
            android:pathData="M35.86,84.14 L41.52,78.48"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
    </group>

    <!-- Clock Hands -->
    <group android:name="clock_hands">
        <!-- Hour hand (pointing to 12) -->
        <path
            android:pathData="M60,60 L60,40"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="3"
            android:strokeLineCap="round" />

        <!-- Minute hand (pointing to 3) -->
        <path
            android:pathData="M60,60 L75,60"
            android:strokeColor="?attr/colorPrimary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
    </group>

    <!-- Center Dot -->
    <path
        android:pathData="M60,60 m-3,0 a3,3 0,1 1,6 0 a3,3 0,1 1,-6 0"
        android:fillColor="?attr/colorPrimary" />

    <!-- Shift Indicators -->
    <group android:name="shift_indicators">
        <!-- Morning (green) - top left -->
        <path
            android:pathData="M35,35 m-4,0 a4,4 0,1 1,8 0 a4,4 0,1 1,-8 0"
            android:fillColor="#4CAF50" />

        <!-- Afternoon (orange) - top right -->
        <path
            android:pathData="M85,35 m-4,0 a4,4 0,1 1,8 0 a4,4 0,1 1,-8 0"
            android:fillColor="#FF9800" />

        <!-- Night (blue) - bottom right -->
        <path
            android:pathData="M85,85 m-4,0 a4,4 0,1 1,8 0 a4,4 0,1 1,-8 0"
            android:fillColor="#3F51B5" />
    </group>

</vector>