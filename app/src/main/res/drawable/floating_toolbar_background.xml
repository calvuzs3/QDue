<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/floating_toolbar_background.xml -->
<!-- Updated with custom menu color attributes -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Custom menu background color -->
    <solid android:color="?attr/floatingMenuBackground" />

    <!-- Rounded corners for floating appearance -->
    <corners android:radius="@dimen/radius_floating_menu" />

    <!-- Subtle stroke using menu colors -->
    <stroke
        android:width="@dimen/spacing_xxxs"
        android:color="?attr/floatingMenuOnBackground"
        android:alpha="0.12" />

</shape>