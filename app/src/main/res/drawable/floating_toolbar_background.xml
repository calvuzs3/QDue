<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/floating_toolbar_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Material 3 surface container color with transparency -->
    <solid android:color="?attr/colorSurfaceContainer" />

    <!-- Rounded corners for floating appearance -->
    <corners android:radius="28dp" />

    <!-- Subtle stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />

</shape>