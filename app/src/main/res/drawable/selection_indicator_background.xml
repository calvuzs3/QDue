<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/selection_indicator_background.xml -->
<!-- Rounded rectangle for selection indicators -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color fill (will be tinted) -->
    <solid android:color="?attr/colorPrimary" />

    <!-- Rounded corners -->
    <corners android:radius="2dp" />

    <!-- Fixed size -->
    <size
        android:width="40dp"
        android:height="3dp" />

</shape>