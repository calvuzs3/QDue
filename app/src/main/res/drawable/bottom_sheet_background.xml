<?xml version="1.0" encoding="utf-8"?>
<!--
Bottom Sheet Background Drawable

Material Design 3 compliant background shape for bottom sheets.
Features rounded top corners while maintaining straight bottom edges
for proper sheet behavior.

Usage: Applied as background to bottom sheet root container
Theming: Uses surface color with proper elevation overlay
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Surface color with elevation tint for MD3 theming -->
    <solid android:color="?attr/colorSurface" />

    <!-- Rounded corners only on top for bottom sheet behavior -->
    <corners
        android:topLeftRadius="@dimen/bottom_sheet_corner_radius"
        android:topRightRadius="@dimen/bottom_sheet_corner_radius"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />

    <!-- Optional subtle stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />

</shape>