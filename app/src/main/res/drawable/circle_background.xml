<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circle_background.xml -->
<!-- Simple circle shape for center dot in clock animation -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid color fill -->
    <solid android:color="?attr/colorOnSurfaceVariant" />

    <!-- Optional stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />

    <!-- Ensure perfect circle -->
    <size
        android:width="8dp"
        android:height="8dp" />

</shape>