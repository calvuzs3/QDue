<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/appbar_background_selector.xml -->
<!-- Stateful background for AppBar with elevation changes -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Elevated state (when scrolled) -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/appbar_elevated_background" />
        </shape>
    </item>

    <!-- Default state (gradient) -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="?attr/colorPrimary"
                android:centerColor="@color/appbar_gradient_center"
                android:endColor="@color/appbar_gradient_end" />
        </shape>
    </item>

</selector>