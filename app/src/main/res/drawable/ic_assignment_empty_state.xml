<?xml version="1.0" encoding="utf-8"?>
<!--
    ic_assignment_empty_state.xml - Empty State Icon for Assignment List

    Vector drawable representing an empty assignment/schedule state.
    Combines calendar and document concepts to suggest "no work schedules".
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="120dp"
    android:height="120dp"
    android:viewportWidth="120"
    android:viewportHeight="120">

    <!-- Background Circle -->
    <path
        android:fillColor="#F5F5F5"
        android:pathData="M60,60m-50,0a50,50 0,1 1,100 0a50,50 0,1 1,-100 0"/>

    <!-- Calendar Background -->
    <path
        android:fillColor="#E0E0E0"
        android:pathData="M35,35h50v45c0,2.76 -2.24,5 -5,5H40c-2.76,0 -5,-2.24 -5,-5V35z"/>

    <!-- Calendar Header -->
    <path
        android:fillColor="#BDBDBD"
        android:pathData="M35,35h50v10H35z"/>

    <!-- Calendar Binding Rings -->
    <path
        android:fillColor="#9E9E9E"
        android:pathData="M45,28a2,2 0,1 0,4 0a2,2 0,1 0,-4 0z"/>
    <path
        android:fillColor="#9E9E9E"
        android:pathData="M58,28a2,2 0,1 0,4 0a2,2 0,1 0,-4 0z"/>
    <path
        android:fillColor="#9E9E9E"
        android:pathData="M73,28a2,2 0,1 0,4 0a2,2 0,1 0,-4 0z"/>

    <!-- Calendar Grid Lines (faded) -->
    <path
        android:strokeColor="#EEEEEE"
        android:strokeWidth="1"
        android:pathData="M40,50h40 M40,58h40 M40,66h40 M40,74h40"/>

    <!-- Vertical grid lines -->
    <path
        android:strokeColor="#EEEEEE"
        android:strokeWidth="1"
        android:pathData="M45,45v35 M55,45v35 M65,45v35 M75,45v35"/>

    <!-- Empty Assignment Icon (Document with X) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M50,55h20v15c0,1.1 -0.9,2 -2,2H52c-1.1,0 -2,-0.9 -2,-2V55z"/>

    <!-- Document Lines (crossed out) -->
    <path
        android:strokeColor="#CCCCCC"
        android:strokeWidth="1"
        android:strokeLineCap="round"
        android:pathData="M53,60h14 M53,63h14 M53,66h10"/>

    <!-- X Mark indicating "no assignments" -->
    <path
        android:strokeColor="#FF5722"
        android:strokeWidth="2"
        android:strokeLineCap="round"
        android:pathData="M52,57l16,13 M68,57l-16,13"/>

    <!-- Bottom Text Area (optional subtle background) -->
    <path
        android:fillColor="#FAFAFA"
        android:pathData="M20,90h80v15c0,2.76 -2.24,5 -5,5H25c-2.76,0 -5,-2.24 -5,-5V90z"/>

</vector>