<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.features.dayview.presentation.DayViewFragment">

    <!-- Main Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/day_view_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Section -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/day_view_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:title="Day View"
                app:titleTextColor="?attr/colorOnPrimary" />

            <!-- Date Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?attr/colorSurfaceVariant">

                <!-- Date and Navigation Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Previous Day Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/previous_day_button"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/previous_day"
                        app:icon="@drawable/ic_rounded_chevron_left_24"
                        app:iconSize="24dp"
                        app:iconTint="?attr/colorOnSurfaceVariant" />

                    <!-- Date Header Text -->
                    <TextView
                        android:id="@+id/date_header_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="bold"
                        tools:text="Monday, January 15, 2025" />

                    <!-- Next Day Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/next_day_button"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/next_day"
                        app:icon="@drawable/ic_rounded_chevron_right_24"
                        app:iconSize="24dp"
                        app:iconTint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Event Count and Today Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Event Count -->
                    <TextView
                        android:id="@+id/event_count_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="5 events" />

                    <!-- Today Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/today_button"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today"
                        android:textSize="12sp"
                        app:iconSize="16dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Selection Toolbar (Hidden by default) -->
            <LinearLayout
                android:id="@+id/selection_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?attr/colorSecondaryContainer"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Selection Count -->
                <TextView
                    android:id="@+id/selection_count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    tools:text="3 selected" />

                <!-- Select All Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_all_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all"
                    android:textSize="12sp" />

                <!-- Clear Selection Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clear_selection_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear"
                    android:textSize="12sp" />

                <!-- Share Selected Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/share_selected_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/share_selected"
                    app:icon="@drawable/ic_rounded_share_24"
                    app:iconSize="20dp" />

                <!-- Delete Selected Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_selected_button"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/delete_selected"
                    app:icon="@drawable/ic_rounded_delete_24"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorError" />

            </LinearLayout>

            <!-- Main Content Area with Pull-to-Refresh -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Events RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/events_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:padding="8dp"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_day_view_local_event" />

                    <!-- Empty State View -->
                    <LinearLayout
                        android:id="@+id/empty_state_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginBottom="16dp"
                            android:alpha="0.6"
                            android:src="@drawable/ic_rounded_event_note_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/empty_state_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:text="No events for January 15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:alpha="0.7"
                            android:text="@string/day_view_empty_subtitle" />

                    </LinearLayout>

                    <!-- Error State View -->
                    <LinearLayout
                        android:id="@+id/error_state_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginBottom="16dp"
                            android:alpha="0.6"
                            android:src="@drawable/ic_rounded_error_24"
                            app:tint="?attr/colorError" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:text="@string/error_loading_events" />

                        <TextView
                            android:id="@+id/error_state_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:alpha="0.7"
                            tools:text="Network connection error" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/retry_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/retry"
                            app:icon="@drawable/ic_rounded_refresh_24"
                            app:iconSize="18dp" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Action Button for Creating Events -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/create_new_event"
        app:srcCompat="@drawable/ic_rounded_add_24"
        app:tint="?attr/colorOnPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>