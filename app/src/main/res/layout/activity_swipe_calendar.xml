<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_swipe_calendar.xml - SwipeCalendarActivity Layout

    Simple, clean layout for hosting SwipeCalendarFragment in debug mode.
    Follows Material Design principles and QDue design system.

    Features:
    - Material Design toolbar with back navigation
    - Full-screen fragment container
    - Optimized for development and debugging
    - Support for various screen sizes and orientations
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="net.calvuz.qdue.ui.features.swipecalendar.presentation.SwipeCalendarActivity">

    <!-- Material Design Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.Material3.Light"
            app:title="@string/debug_swipe_calendar_title"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@android:drawable/menu_frame"
            app:navigationContentDescription="@string/navigation_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/colorSurface">

        <!-- Debug Loading Indicator (shown while fragment loads) -->
        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                app:indicatorColor="?attr/colorPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/debug_loading_calendar"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>

        <!-- Debug Info Panel (optional, can be shown programmatically) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/debug_info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_info_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:drawableStart="@drawable/ic_rounded_bug_report_24"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/debug_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace"
                    tools:text="Fragment: SwipeCalendarFragment&#10;State: READY&#10;Dependencies: OK" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/debug_close_button"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="@string/debug_close"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Debug Status Bar (bottom) -->
    <LinearLayout
        android:id="@+id/debug_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/debug_mode_active"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:drawableStart="@drawable/ic_rounded_search_gear_24"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/debug_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="monospace"
            tools:text="READY" />

    </LinearLayout>

</LinearLayout>