<!-- ENHANCED ACTION BUTTON LAYOUT -->
<!-- res/layout/enhanced_bottom_toolbar_action.xml -->
<!-- ============================================ -->

<!-- Enhanced action button for bottom toolbar with larger size and better styling -->
<com.google.android.material.button.MaterialButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_action"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_margin="@dimen/spacing_xs"
    android:insetTop="0dp"
    android:insetBottom="0dp"
    android:insetLeft="0dp"
    android:insetRight="0dp"
    android:minWidth="56dp"
    android:minHeight="56dp"
    android:padding="12dp"
    app:cornerRadius="@dimen/radius_m"
    app:iconSize="24dp"
    app:iconTint="?attr/floatingMenuOnBackground"
    app:backgroundTint="?attr/floatingMenuSurface"
    app:rippleColor="?attr/floatingMenuSelected"
    android:stateListAnimator="@animator/enhanced_button_state_animator"
    android:focusable="true"
    android:clickable="true"
    android:elevation="0dp"
    style="@style/Widget.Material3.Button.IconButton">

    <!-- Icon will be set programmatically -->

</com.google.android.material.button.MaterialButton>

