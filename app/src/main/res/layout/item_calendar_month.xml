<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:layout_marginVertical="4dp">

    <!-- Titolo del mese -->
    <TextView
        android:id="@+id/tv_month_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agosto 2025"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/colorTextBlack"
        android:background="@drawable/month_title_background"
        android:paddingVertical="8dp" />

    <!-- Griglia del calendario del mese -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />

    <!-- Separatore tra i mesi -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBorderLight"
        android:layout_marginTop="16dp" />

</LinearLayout>