<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pattern"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Pattern Status Icon -->
            <ImageView
                android:id="@+id/img_pattern_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rounded_check_circle_24"
                android:contentDescription="My Work Pattern"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />

            <!-- Pattern Name -->
            <TextView
                android:id="@+id/txt_pattern_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Work Pattern"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Pattern Type Badge -->
            <TextView
                android:id="@+id/txt_pattern_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/bg_badge_purple"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />

            <!-- Radio Button -->
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_pattern_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:clickable="false"
                android:focusable="false"
                app:buttonTint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Pattern Description -->
        <TextView
            android:id="@+id/txt_pattern_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom work pattern with flexible schedule"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Pattern Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Cycle Length Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_rounded_schedule_24"
                    android:contentDescription="days"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/txt_cycle_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 days"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Work/Rest Info -->
            <TextView
                android:id="@+id/txt_work_rest_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7 work, 3 rest"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:drawableStart="@drawable/ic_rounded_work_24"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Start Date Info (if available) -->
        <TextView
            android:id="@+id/txt_pattern_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From Jan 15, 2025"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorSecondary"
            android:drawableStart="@drawable/ic_rounded_calendar_today_24"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>