<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dayslist_row_item_padding"
    android:paddingTop="@dimen/header_padding_top"
    android:paddingBottom="@dimen/header_padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="@dimen/column_header_padding"
        android:paddingTop="@dimen/column_header_padding"
        android:paddingBottom="@dimen/column_header_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_sunday"
            android:textAlignment="center"
            android:textColor="@color/error"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_monday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_tuesday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_thuersday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_wednsday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_friday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/column_header_padding"
            android:paddingEnd="@dimen/column_header_padding"
            android:text="@string/header_saturday"
            android:textAlignment="center"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/on_primary"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="?attr/colorOutline"
        android:visibility="invisible" />

</LinearLayout>