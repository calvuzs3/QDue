<?xml version="1.0" encoding="utf-8"?>
<!-- Empty State Layout for Events -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Empty State Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.6"
        android:src="@android:drawable/ic_menu_today"
        android:contentDescription="@string/today"
        app:tint="?attr/colorOnSurfaceVariant" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/no_event_available"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/no_events_import_from_JSON_file_or_manually_add_event"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:lineSpacingExtra="4dp" />

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Primary Action: Import Events -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_empty_import_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/import_events"
            android:textColor="?attr/colorOnPrimary"
            app:icon="@android:drawable/ic_input_get"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button" />

        <!-- Secondary Action: Create Event -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_empty_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_event"
            app:icon="@android:drawable/ic_input_add"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Help Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/tip_important_events_will_be_automatically_synchronized"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textStyle="italic" />

</LinearLayout>