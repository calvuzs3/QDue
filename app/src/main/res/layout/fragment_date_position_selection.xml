<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Step Header -->
        <TextView
            android:id="@+id/txt_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_date_position_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txt_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_date_position_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="32dp" />

        <!-- Date Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/txt_date_section_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/assignment_date_label"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp" />

            <!-- Quick Date Options -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_quick_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="false" />

            <!-- Date Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_date"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_rounded_calendar_today_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/assignment_date_hint"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Selected Date Display -->
            <TextView
                android:id="@+id/txt_date_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorPrimary"
                android:drawableStart="@drawable/ic_rounded_event_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@drawable/bg_selection_highlight"
                android:visibility="gone" />

            <!-- Clear Date Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_date"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Cancella"
                app:icon="@drawable/ic_rounded_ink_eraser_24"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Cycle Position Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_cycle_position_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cycle_position_label"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txt_cycle_position_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cycle_position_description_quattrodue"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="16dp" />

            <!-- Position Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_cycle_position"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_cycle_position_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cycle_position_hint"
                    android:inputType="number"
                    android:maxLength="2" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quick Position Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_position_1"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/quick_action_cycle_position_1"
                    app:icon="@drawable/ic_rounded_looks_one_24" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_position_auto"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_action_auto_detect"
                    app:icon="@drawable/ic_rounded_auto_fix_high_24" />

            </LinearLayout>

            <!-- Position Details -->
            <TextView
                android:id="@+id/txt_cycle_position_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorSecondary"
                android:drawableStart="@drawable/ic_rounded_info_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/bg_info_container"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Pattern Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_tip_container"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rounded_lightbulb_24"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tooltip_cycle_position"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>