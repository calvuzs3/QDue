<?xml version="1.0" encoding="utf-8"?>
<!-- SmartShifts Import Options Dialog Layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- File Information Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_file_info_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_file_name_placeholder"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textStyle="italic" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Import Validation Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_validation_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/checkbox_validate_before_import"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_validate_before_import"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkbox_show_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_show_progress"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkbox_backup_before_import"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_backup_before_import"
                    android:checked="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Conflict Resolution Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_conflict_resolution_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_conflict_resolution_subtitle"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radio_group_conflict_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_skip_conflicts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_import_skip_conflicts" />

                    <RadioButton
                        android:id="@+id/radio_replace_existing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_import_replace_existing" />

                    <RadioButton
                        android:id="@+id/radio_merge_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_import_merge_data" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Import Behavior Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_behavior_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/checkbox_preserve_existing_assignments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_preserve_existing_assignments"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkbox_update_existing_patterns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_update_existing_patterns"
                    android:checked="false" />

                <CheckBox
                    android:id="@+id/checkbox_allow_partial_import"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_import_allow_partial_import"
                    android:checked="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>