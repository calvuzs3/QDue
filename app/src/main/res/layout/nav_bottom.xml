<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/nav_bottom.xml -->
<!-- BottomNavigation component for portrait mode -->
<com.google.android.material.bottomnavigation.BottomNavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="?attr/colorSurface"
    android:elevation="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    app:menu="@menu/bottom_navigation_menu"
    app:itemIconTint="@color/nav_bottom_item_color"
    app:itemTextColor="@color/nav_bottom_item_color"
    app:itemActiveIndicatorStyle="@style/Theme.QDue.BottomNavigation.ActiveIndicator"
    app:itemIconSize="24dp"
    app:itemTextAppearanceActive="@style/TextAppearance.QDue.Body2"
    app:itemTextAppearanceInactive="@style/TextAppearance.QDue.Body2"
    app:labelVisibilityMode="selected"
    app:itemRippleColor="@color/navigation_ripple_color" />