<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_calendar_day.xml -->
<!-- SIMPLIFIED: Enhanced calendar day with hierarchical highlighting -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:minHeight="48dp"

    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="0.5dp"

    app:rippleColor="?attr/colorPrimaryContainer"
    android:clickable="true"
    android:focusable="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="6dp">

<!-- ============================================ -->
<!-- DAY NUMBER - Enhanced visibility -->
<!-- ============================================ -->
<TextView
    android:id="@+id/tv_day_number"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:minHeight="24dp"

android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
android:textStyle="bold"
android:textSize="15sp"
android:textColor="?attr/colorOnSurface"
android:fontFamily="@font/lato_bold"

android:text="@string/placeholder_calendar_day"
tools:text="15" />

<!-- ============================================ -->
<!-- SHIFT INDICATOR - Simplified and prominent -->
<!-- ============================================ -->
<View
    android:id="@+id/v_shift_indicator"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="4dp"

android:visibility="invisible"

android:background="@drawable/shift_indicator_background"

tools:visibility="visible"
tools:background="?attr/colorShiftAfternoon" />

</LinearLayout>

    <!-- ============================================ -->
    <!-- HIERARCHICAL HIGHLIGHTING OVERLAY -->
    <!-- Today > User Shift > Sunday priority -->
    <!-- ============================================ -->

    <!-- Today overlay (Highest priority) -->
<View
android:id="@+id/v_today_overlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/colorTodayBackground"
android:alpha="0.3"
android:visibility="gone"
tools:visibility="visible"
tools:alpha="0.3" />

    <!-- User shift overlay (High priority) -->
<View
android:id="@+id/v_user_shift_overlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/colorUserShiftBackground"
android:alpha="0.2"
android:visibility="gone" />

    <!-- Sunday overlay (Medium priority) -->
<View
android:id="@+id/v_sunday_overlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/colorSundayBackground"
android:alpha="0.15"
android:visibility="gone" />

    <!-- ============================================ -->
    <!-- COMBINED STATE INDICATOR -->
    <!-- Border highlight for special combinations -->
    <!-- ============================================ -->
<View
android:id="@+id/v_combined_border"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/calendar_day_combined_border"
android:visibility="gone"
tools:visibility="visible" />

    </com.google.android.material.card.MaterialCardView>