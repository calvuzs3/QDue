<?xml version="1.0" encoding="utf-8"?>
<!--
File Export Dialog Fragment Layout

Full-screen dialog for exporting events to JSON files.
Supports export mode selection, date range options, file naming, and progress tracking.

Features:
- Export mode radio buttons (all/date range/selected)
- Date range selection with chips
- Export options checkboxes
- File naming input
- Progress indicator and status
- Material Design 3 styling
- Responsive layout
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="@string/export_events"
            app:navigationIcon="@drawable/ic_rounded_close_24" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_l">

            <!-- Export Mode Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_l"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_m"
                        android:text="@string/export_export_mode"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <RadioGroup
                        android:id="@+id/export_mode_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/all_events_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_s"
                            android:checked="true"
                            android:text="@string/export_export_all_events"
                            android:textAppearance="?attr/textAppearanceBodyLarge" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/date_range_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_s"
                            android:text="@string/export_export_date_range"
                            android:textAppearance="?attr/textAppearanceBodyLarge" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/selected_events_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/export_selected_events"
                            android:textAppearance="?attr/textAppearanceBodyLarge" />

                        <TextView
                            android:id="@+id/selected_events_count_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xl"
                            android:layout_marginTop="@dimen/spacing_s"
                            android:text="@string/export_no_events_selected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:visibility="gone"
                            tools:text="5 events selected"
                            tools:visibility="visible" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date Range Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/date_range_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_l"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_m"
                        android:text="@string/export_date_range"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <!-- Date Range Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_m"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/start_date_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_s"
                            android:layout_weight="1"
                            android:text="@string/export_start_date"
                            app:icon="@drawable/ic_rounded_calendar_today_24" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/end_date_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_s"
                            android:layout_weight="1"
                            android:text="@string/export_end_date"
                            app:icon="@drawable/ic_rounded_event_24" />

                    </LinearLayout>

                    <!-- Date Range Chips Container -->
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="@dimen/spacing_s"
                        app:singleLine="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/start_date_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            android:text="@string/export_from_date"
                            android:visibility="gone"
                            app:closeIcon="@drawable/ic_rounded_close_24"
                            app:closeIconVisible="true"
                            tools:text="From: 01/09/2025"
                            tools:visibility="visible" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/end_date_chip"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="false"
                            android:text="@string/export_to_date"
                            android:visibility="gone"
                            app:closeIcon="@drawable/ic_rounded_close_24"
                            app:closeIconVisible="true"
                            tools:text="To: 30/09/2025"
                            tools:visibility="visible" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Export Options Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_l"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_m"
                        android:text="@string/export_options"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/include_descriptions_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/export_include_descriptions" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/include_locations_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/export_include_locations" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- File Settings Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_l"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_m"
                        android:text="@string/file_settings"
                        android:textAppearance="?attr/textAppearanceTitleMedium" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/file_name_input_layout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/file_name"
                        app:endIconMode="clear_text"
                        app:helperText="@string/file_name_helper"
                        app:startIconDrawable="@drawable/ic_rounded_description_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/file_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="50"
                            tools:text="qdue_events_2025-09-15.json" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Section -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="?attr/colorPrimary"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="Exporting... 50/100 (50%)"
                tools:visibility="visible" />

            <!-- Status Message -->
            <!-- Bottom margin increased due to bottom action buttons -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="File operations are not fully available"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_l">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_m"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <!-- Export Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/export_button"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_export"
            app:icon="@drawable/ic_file_download" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>