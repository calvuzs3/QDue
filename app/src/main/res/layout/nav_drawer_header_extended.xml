<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/nav_drawer_header_extended.xml -->
<!-- Header for extended drawer (phone portrait) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:gravity="bottom|start"
    android:padding="16dp"
    android:background="?attr/colorPrimary"
    >

    <!-- App branding section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- App Icon (optional) -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_launcher_foreground"
            android:foregroundTint="?attr/colorOnPrimary"
            android:padding="8dp"
            app:tint="?attr/colorOnPrimary" />

        <!-- App info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.QDue.HeadlineMedium"
                android:textColor="?attr/colorOnPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_extended_menu"
                android:textAppearance="@style/TextAppearance.QDue.BodyMedium"
                android:textColor="?attr/colorOnPrimary"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

    <!-- Version info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_dynamic"
        android:textAppearance="@style/TextAppearance.QDue.BodySmall"
        android:textColor="?attr/colorOnPrimary"
        android:alpha="0.6" />

</LinearLayout>