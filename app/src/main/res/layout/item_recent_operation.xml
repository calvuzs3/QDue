<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:rippleColor="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Status Icon -->
        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp">

            <!-- Success Icon -->
            <ImageView
                android:id="@+id/icon_success"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_rounded_check_circle_24"
                android:contentDescription="@string/smartshifts_success"
                app:tint="?attr/colorPrimary"
                android:visibility="visible"
                tools:visibility="visible" />

            <!-- Error Icon -->
            <ImageView
                android:id="@+id/icon_error"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_rounded_error_24"
                android:contentDescription="@string/error"
                app:tint="?attr/colorError"
                android:visibility="gone"
                tools:visibility="gone" />

            <!-- Background Circle -->
            <View
                android:id="@+id/background_circle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background_success"
                android:alpha="0.2" />

        </FrameLayout>

        <!-- Operation Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Operation Type and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_operation_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/export_completed"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Export Completo" />

                <TextView
                    android:id="@+id/text_operation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:32"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="14:32"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Operation Details -->
            <TextView
                android:id="@+id/text_operation_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/export_successfully_completed"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Export completato con successo" />

            <!-- Operation Date (for operations not from today) -->
            <TextView
                android:id="@+id/text_operation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="@string/common_yesterday"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Ieri"
                tools:visibility="gone" />

        </LinearLayout>

        <!-- Action Button (Optional) -->
        <ImageButton
            android:id="@+id/btn_action"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rounded_more_vert_24"
            android:contentDescription="@string/actions_operation"
            app:tint="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            tools:visibility="gone" />

        <!-- Status Badge (Alternative) -->
        <LinearLayout
            android:id="@+id/layout_status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_badge_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/badge_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/ic_rounded_check_24"
                android:contentDescription="@string/common_ok"
                app:tint="?attr/colorOnPrimary" />

            <TextView
                android:id="@+id/badge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_ok"
                android:textSize="11sp"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                tools:text="OK" />

        </LinearLayout>

    </LinearLayout>

    <!-- Expandable Details Section (Optional) -->
    <LinearLayout
        android:id="@+id/layout_expandable_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorSurfaceVariant"
        android:alpha="0.3"
        android:visibility="gone"
        tools:visibility="gone">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.5" />

        <!-- Extended Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/file_semicolon"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_extended_file_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="placeholder_export_json_file.json"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="middle"
                tools:text="smartshifts_export_20250720_143255.json"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dimension_semicolon"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_extended_file_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="placeholder MB"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="2.3 MB"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/duration_semicolon"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_extended_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="placeholder 12 seconds"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="12 secondi"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share_result"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:text="@string/share"
                android:textSize="11sp"
                app:icon="@drawable/ic_rounded_share_24"
                app:iconSize="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retry_operation"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/repeat"
                android:textSize="11sp"
                app:icon="@drawable/ic_refresh"
                app:iconSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>