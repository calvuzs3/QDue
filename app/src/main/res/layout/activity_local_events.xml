<?xml version="1.0" encoding="utf-8"?>
<!--
LocalEvents MVVM Activity Layout

This layout provides the container structure for the LocalEvents MVVM Activity,
including toolbar, navigation host, floating action button, and loading states.

Key Features:
- Coordinator layout for proper material design interactions
- Collapsing toolbar for enhanced UX
- Navigation component integration
- Loading state overlay
- FAB positioned according to material guidelines
- Proper elevation and shadows
- Support for different screen sizes
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.features.events.local.presentation.LocalEventsActivity">

    <!-- App Bar Layout with Collapsing Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_local_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" >
<!--        android:theme="@style/ThemeOverlay.QDue.AppBarOverlay">-->

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_local_events"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_toolbar_height"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="?attr/colorPrimaryVariant"
            app:toolbarId="@id/toolbar_local_events">

            <!-- Header Image/Background (Optional) -->
            <ImageView
                android:id="@+id/header_image_local_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/local_events_header_desc"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/local_events_header_bg"
                app:layout_collapseMode="parallax" />

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_local_events"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationContentDescription="@string/navigate_up"
                app:title="@string/nav_events" />
<!--            app:popupTheme="@style/ThemeOverlay.QDue.PopupOverlay"-->
<!--            app:navigationContentDescription="@string/navigate_up"-->

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Navigation Host Fragment Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Navigation Host Fragment -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/nav_host_fragment_local_events"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navGraph="@navigation/local_events_navigation" />

            <!-- Empty State View -->
            <include
                android:id="@+id/empty_state_local_events"
                layout="@layout/empty_state_local_events"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_local_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:contentDescription="@string/add_new_event"
        app:srcCompat="@drawable/ic_rounded_add_24"
        app:tint="@color/white"
        app:backgroundTint="?attr/colorSecondary"
        app:elevation="@dimen/fab_elevation"
        app:pressedTranslationZ="@dimen/fab_pressed_translation_z"
        app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior" />

    <!-- Loading State Overlay -->
    <include
        android:id="@+id/loading_state_local_events"
        layout="@layout/loading_state_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_anchor="@id/nav_host_fragment_local_events"
        app:layout_anchorGravity="center" />

    <!-- Selection Mode Bottom Sheet (Hidden by default) -->
    <include
        android:id="@+id/selection_bottom_sheet"
        layout="@layout/bottom_sheet_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
<!--    layout="@layout/selection_mode_bottom_sheet"-->

    <!-- Progress Bar for File Operations -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_file_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone"
        app:indicatorColor="?attr/colorSecondary"
        app:layout_anchor="@id/app_bar_local_events"
        app:layout_anchorGravity="bottom"
        app:showAnimationBehavior="outward"
        app:hideAnimationBehavior="inward" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>