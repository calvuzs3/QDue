<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/nav_sidebar.xml -->
<!-- Sidebar Navigation component for landscape mode -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sidebar_container"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="8dp">

    <!-- Sidebar Header with App Branding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sidebar_header_height"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/side_nav_bar">

        <!-- App Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="?attr/colorOnPrimary" />

        <!-- App ID/Version -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnPrimary"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Navigation Menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sidebar_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurfaceVariant"
        android:scrollbars="none"
        app:menu="@menu/sidebar_navigation_menu"
        app:itemTextColor="@color/nav_sidebar_item_color"
        app:itemIconTint="@color/nav_sidebar_item_color"
        app:itemShapeAppearance="@style/Widget.Material3.SideSheet"
        app:itemShapeInsetStart="8dp"
        app:itemShapeInsetEnd="8dp"
        app:itemRippleColor="@color/navigation_ripple_color"
        app:headerLayout="@null"
        app:elevation="0dp" />

</LinearLayout>