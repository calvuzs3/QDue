<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smartshifts.ui.exportimport.SmartShiftsExportImportActivity">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Export/Import"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Export Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Export Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_rounded_upload_24"
                            android:contentDescription="@string/export_data"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/export_data"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- Export Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Complete Export -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_export_complete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_folder_zip_24"
                                    android:contentDescription="@string/export_completed"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/export_completed"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/all_smartshifts_data"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Selective Export -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_export_selective"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_filter_list_24"
                                    android:contentDescription="@string/selective_export"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/selective_export"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/choose_specific_data_to_export"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Calendar Export -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_export_calendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_calendar_month_24"
                                    android:contentDescription="@string/calendar_export"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/calendar_export"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/icalendar_format"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Backup -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_export_backup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_backup_24"
                                    android:contentDescription="@string/backup_completed"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorPrimary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/backup_completed"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/backup_safe_with_metadata"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Import Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Import Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_rounded_download_24"
                            android:contentDescription="@string/import_data"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorSecondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/import_data"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- Import Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Import File -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_import_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorSecondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_folder_open_24"
                                    android:contentDescription="@string/import_from_file"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorSecondary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/import_from_file"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/json_cvs_xml_excel"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Import Cloud -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_import_cloud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorSecondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_cloud_download_24"
                                    android:contentDescription="@string/import_from_cloud"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorSecondary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/import_from_cloud"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/google_drive_dropbox"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Restore Backup -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_restore_backup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:rippleColor="?attr/colorSecondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_rounded_restore_page_24"
                                    android:contentDescription="@string/restore_backup"
                                    android:layout_marginEnd="12dp"
                                    app:tint="?attr/colorSecondary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/restore_backup"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="?attr/colorOnSurface" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/restore_from_previous_backups"
                                        android:textSize="12sp"
                                        android:textColor="?attr/colorOnSurfaceVariant" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rounded_chevron_right_24"
                                    android:contentDescription="@string/common_go"
                                    app:tint="?attr/colorOnSurfaceVariant" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Operations -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Recent Operations Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_rounded_history_24"
                            android:contentDescription="@string/recent_operations"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorTertiary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recent_operations"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_all"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Recent Operations List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_recent_operations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_recent_operation" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/layout_empty_operations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_rounded_folder_open_24"
                            android:contentDescription="@string/no_recent_operation"
                            android:layout_marginBottom="16dp"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:alpha="0.6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_recent_operation"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Progress Layout -->
    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:indicatorColor="?attr/colorPrimary"
            app:trackColor="?attr/colorSurfaceVariant" />

        <!-- Progress Status -->
        <TextView
            android:id="@+id/text_operation_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/operation_in_progress_dots"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_operation"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/common_cancel"
            app:icon="@drawable/ic_rounded_cancel_24" />

    </LinearLayout>

    <!-- Quick Export FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_quick_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="@string/quick_export"
        app:icon="@drawable/ic_rounded_flash_on_24"
        app:backgroundTint="?attr/colorPrimary"
        app:iconTint="?attr/colorOnPrimary"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>