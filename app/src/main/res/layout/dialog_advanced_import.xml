<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Validation Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_validation"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorPrimary" />

    <CheckBox
        android:id="@+id/checkbox_validate_before_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/text_validate_before_import" />

    <CheckBox
        android:id="@+id/checkbox_show_warnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/text_show_validation_results" />

    <!-- Conflict Resolution -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_duplicate_event"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorPrimary" />

    <RadioGroup
        android:id="@+id/radio_group_conflict_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_skip_duplicates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/text_skip_duplicate_event" />

        <RadioButton
            android:id="@+id/radio_replace_existing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_substitute_existing_events" />

        <RadioButton
            android:id="@+id/radio_rename_duplicates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_rename_duplicated_events" />

    </RadioGroup>

    <!-- Import Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_import_behaviour"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorPrimary" />

    <CheckBox
        android:id="@+id/checkbox_show_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/text_show_import_progress" />

    <CheckBox
        android:id="@+id/checkbox_preserve_existing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/text_keep_existing_events" />

    <CheckBox
        android:id="@+id/checkbox_allow_partial_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/text_allow_partial_import_on_errors" />

</LinearLayout>