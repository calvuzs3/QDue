<?xml version="1.0" encoding="utf-8"?>
<!-- SmartShifts Operation Result Dialog Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Status Icon -->
    <ImageView
        android:id="@+id/image_status"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_rounded_check_circle_24"
        android:contentDescription="@string/smartshifts_result_status_icon_description" />

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smartshifts_result_title_placeholder"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smartshifts_result_message_placeholder"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Details Card (conditionally visible) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp">

            <TextView
                android:id="@+id/text_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/smartshifts_result_details_placeholder"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:padding="16dp"
                android:fontFamily="monospace"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Primary Action Button (Share/Open/Retry) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_primary"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_share"
            app:icon="@drawable/ic_rounded_share_24"
            android:visibility="gone" />

        <!-- Secondary Action Button (Open File) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_secondary"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_open"
            app:icon="@drawable/ic_rounded_open_in_new_24"
            android:visibility="gone" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_close" />

    </LinearLayout>

</LinearLayout>