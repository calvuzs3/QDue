<?xml version="1.0" encoding="utf-8"?>
<!--
    item_shift_selection_rest.xml
    Layout for rest day selection card in horizontal RecyclerView.

    Features:
    - Special styling for rest day option
    - Rest icon and descriptive text
    - Distinct visual appearance from work shifts
    - Material Design 3 card styling
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_rest_day_selection"
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/rest_day_stroke_color"
    app:cardBackgroundColor="@color/rest_day_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <!-- Rest Icon -->
        <ImageView
            android:id="@+id/iv_rest_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_rounded_hotel_24"
            android:contentDescription="@string/content_desc_rest_day_icon"
            app:tint="@color/rest_day_icon_color" />

        <!-- Rest Day Text -->
        <TextView
            android:id="@+id/tv_rest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pattern_day_rest"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/rest_day_text_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Rest Description -->
        <TextView
            android:id="@+id/tv_rest_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shift_selection_rest_day_description"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/rest_day_text_secondary_color"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>