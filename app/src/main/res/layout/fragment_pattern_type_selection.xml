<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Step Header -->
        <TextView
            android:id="@+id/txt_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_pattern_type_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txt_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_pattern_type_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="32dp" />

        <!-- QuattroDue Pattern Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_quattro_due"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_rounded_schedule_24"
                    app:tint="?attr/colorPrimary"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_circle_primary_container"
                    android:padding="12dp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_quattro_due_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_quattrodue_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/txt_quattro_due_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_quattrodue_description"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txt_quattro_due_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_quattrodue_details"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorSecondary"
                        android:background="@drawable/bg_details_container"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Radio Button -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_quattro_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    app:buttonTint="?attr/colorPrimary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Custom Pattern Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:checkable="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_rounded_edit_24"
                    app:tint="?attr/colorSecondary"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_circle_secondary_container"
                    android:padding="12dp" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_custom_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_custom_title"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/txt_custom_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_custom_description"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txt_custom_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pattern_type_custom_details"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorSecondary"
                        android:background="@drawable/bg_details_container"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Radio Button -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:clickable="false"
                    android:focusable="false"
                    app:buttonTint="?attr/colorPrimary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tips Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_info_container"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_rounded_info_24"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tooltip_quattrodue_pattern"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>