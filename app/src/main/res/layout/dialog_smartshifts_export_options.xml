<?xml version="1.0" encoding="utf-8"?>
<!-- SmartShifts Export Options Dialog Layout - FIXED & ENHANCED -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:contentDescription="@string/smartshifts_export_options_description">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Package Information Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_package_info_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Package Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/smartshifts_export_package_name_hint"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_package_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        tools:text="SmartShifts_Export_20250720" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/smartshifts_export_description_hint"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        tools:text="Esportazione dati SmartShifts" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Export Format Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_format_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <!-- Format Selector -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/spinner_format"
                    android:hint="@string/smartshifts_export_format_hint"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_format"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        tools:text="JSON" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Format Description/Recommendation -->
                <TextView
                    android:id="@+id/text_format_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="💡 Raccomandato per import completo"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Date Range Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_date_range_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/radio_group_date_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_all_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_all"
                        android:contentDescription="@string/smartshifts_date_range_all" />

                    <RadioButton
                        android:id="@+id/radio_last_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_last_month"
                        android:contentDescription="@string/smartshifts_date_range_last_month" />

                    <RadioButton
                        android:id="@+id/radio_last_3_months"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_last_3_months"
                        android:contentDescription="@string/smartshifts_date_range_last_3_months" />

                    <RadioButton
                        android:id="@+id/radio_last_6_months"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_last_6_months"
                        android:contentDescription="@string/smartshifts_date_range_last_6_months" />

                    <RadioButton
                        android:id="@+id/radio_last_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_last_year"
                        android:contentDescription="@string/smartshifts_date_range_last_year" />

                    <!-- FIXED: Added missing radio_current_year -->
                    <RadioButton
                        android:id="@+id/radio_current_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_date_range_current_year"
                        android:contentDescription="@string/smartshifts_date_range_current_year" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Selection Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_data_selection_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/checkbox_include_shift_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_include_shift_types"
                    android:contentDescription="@string/smartshifts_export_include_shift_types" />

                <CheckBox
                    android:id="@+id/checkbox_include_patterns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_include_patterns"
                    android:contentDescription="@string/smartshifts_export_include_patterns" />

                <CheckBox
                    android:id="@+id/checkbox_include_assignments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_include_assignments"
                    android:contentDescription="@string/smartshifts_export_include_assignments" />

                <CheckBox
                    android:id="@+id/checkbox_include_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_include_events"
                    android:contentDescription="@string/smartshifts_export_include_events" />

                <CheckBox
                    android:id="@+id/checkbox_include_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_include_contacts"
                    android:contentDescription="@string/smartshifts_export_include_contacts" />

                <!-- Privacy Warning for Contacts -->
                <TextView
                    android:id="@+id/text_privacy_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/smartshifts_export_privacy_warning"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:drawableStartCompat="@drawable/ic_rounded_info_24"
                    android:drawablePadding="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="ℹ️ I contatti squadra contengono informazioni personali" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Output Options Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_output_options_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/checkbox_compress_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_export_compress_output"
                    android:contentDescription="@string/smartshifts_export_compress_output" />

                <!-- Compression Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/smartshifts_export_compression_info"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Riduce la dimensione del file fino al 70%" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>