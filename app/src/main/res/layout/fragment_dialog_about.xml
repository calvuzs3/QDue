<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding"
        android:paddingStart="@dimen/dialog_padding"
        android:paddingTop="@dimen/dialog_padding"
        android:paddingEnd="@dimen/dialog_padding"
        android:paddingBottom="@dimen/dialog_padding">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:typeface="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingTop="@dimen/dialog_padding"
            android:text="@string/app_desc"
            android:textAppearance="@style/TextAppearance.QDue.Headline2"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_about"
            android:textAppearance="@style/TextAppearance.QDue.Body2"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingTop="@dimen/dialog_padding"
            android:text="@string/app_libraries"
            android:textAppearance="@style/TextAppearance.QDue.Headline2"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingTop="4dp"
            android:text="@string/app_libraries_used"
            android:textAppearance="@style/TextAppearance.QDue.Body2"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dialog_padding"
            android:text="@string/app_author_str"
            android:textAppearance="@style/TextAppearance.QDue.Headline2"
            android:textColor="@color/primary" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="@string/app_author_str_name"
            android:textAppearance="@style/TextAppearance.QDue.Body2"
            android:typeface="normal" />

        <!-- Legenda turni -->
        <LinearLayout
            android:id="@+id/ll_shifts_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_padding"
            android:background="?attr/colorSurfaceVariant"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="visible">

            <!-- Titolo legenda -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/legenda_title"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.QDue.Headline2" />

            <!-- Container per indicatori -->
            <LinearLayout
                android:id="@+id/ll_legend_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Indicatore giorno corrente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/current_day_indicator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/legenda_today"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="@dimen/legenda_text_size" />

                </LinearLayout>

                <!-- I turni verranno aggiunti dinamicamente qui -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>