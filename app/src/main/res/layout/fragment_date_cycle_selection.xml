<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Step Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_date_cycle_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Step Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wizard_step_date_cycle_description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="32dp" />

        <!-- Date Selection Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_assignment_date_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_assignment_date_description"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Date Display and Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_date_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_rounded_calendar_today_24"
                        android:contentDescription="@string/action_select_date"
                        app:tint="?attr/colorPrimary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/txt_selected_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hint_select_assignment_date"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_date"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_change"
                        app:icon="@drawable/ic_rounded_edit_calendar_24" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Cycle Position Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Cycle Position Title -->
                <TextView
                    android:id="@+id/txt_cycle_position_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_cycle_position_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <!-- Cycle Position Range Info -->
                <TextView
                    android:id="@+id/txt_cycle_position_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cycle_range_default"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Cycle Day Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/cycle_day_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:valueFrom="1"
                    android:valueTo="18"
                    android:stepSize="1"
                    android:value="1"
                    app:thumbColor="?attr/colorPrimary"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorOutline" />

                <!-- Selected Cycle Day Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_cycle_day_display"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/txt_selected_cycle_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cycle_day_format_default"
                        android:textAppearance="?attr/textAppearanceTitleSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <!-- Phase Info (for QuattroDue patterns) -->
                    <TextView
                        android:id="@+id/txt_cycle_phase_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/quattrodue_phase_info_default"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorPrimary"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_rounded_lightbulb_24"
                        android:contentDescription="@string/wizard_date_cycle_tips_title"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wizard_date_cycle_tips_title"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wizard_date_cycle_tips_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>