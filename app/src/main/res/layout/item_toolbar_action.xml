<?xml version="1.0" encoding="utf-8"?><!-- res/layout/item_toolbar_action.xml -->
<!-- Individual action button layout for the floating toolbar -->
<com.google.android.material.button.MaterialButton xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_toolbar_action"
    style="@style/Widget.Material3.Button.TextButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_item"
    android:contentDescription="@string/toolbar_action"
    android:text="@string/toolbar_action"
    android:textAppearance="@style/TextAppearance.QDue.LabelMedium"
    app:cornerRadius="24dp"
    app:iconGravity="textTop"
    app:iconSize="32dp"
    app:iconTint="?attr/floatingMenuOnBackground"
    app:rippleColor="?attr/floatingMenuSelected">

    <!-- Action icon will be set programmatically -->

</com.google.android.material.button.MaterialButton>

