<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Conflict Resolution Dialog Layout -->
<!-- Material Design 3 compliant with SmartShifts UI patterns -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_l">

        <!-- ============================================ -->
        <!-- CONFLICT INFORMATION SECTION -->
        <!-- ============================================ -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_low"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">

                <!-- Conflict Info Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_conflict_information"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="@dimen/spacing_s" />

                <!-- Main Conflict Information -->
                <TextView
                    android:id="@+id/text_conflict_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="@dimen/spacing_s"
                    android:text="@string/smartshifts_conflict_loading" />

                <!-- Detailed Conflict List -->
                <TextView
                    android:id="@+id/text_conflict_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace"
                    android:background="?attr/colorSurface"
                    android:padding="@dimen/spacing_s"
                    android:text="@string/smartshifts_conflict_details_loading" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- RESOLUTION STRATEGY SECTION -->
        <!-- ============================================ -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_low"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">

                <!-- Resolution Strategy Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_resolution_strategy"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="@dimen/spacing_m" />

                <!-- Resolution Options -->
                <RadioGroup
                    android:id="@+id/radio_group_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Skip Existing (Safe Option) -->
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_skip_existing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_skip"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        app:buttonTint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_skip_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <!-- Replace Existing (Destructive Option) -->
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_replace_existing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_replace"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        app:buttonTint="?attr/colorError" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_replace_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <!-- Merge Data (Intelligent Option) -->
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_merge_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_merge"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        app:buttonTint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_merge_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="@dimen/spacing_m" />

                    <!-- Rename Conflicts (Advanced Option) -->
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_rename_conflicts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_rename"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:layout_marginBottom="@dimen/spacing_xs"
                        app:buttonTint="?attr/colorTertiary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_strategy_rename_desc"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginStart="32dp" />

                </RadioGroup>

                <!-- Apply to All Checkbox -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_apply_to_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_apply_to_all_conflicts"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:visibility="gone"
                    app:buttonTint="?attr/colorPrimary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- RECOMMENDATION SECTION -->
        <!-- ============================================ -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_low"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m">

                <!-- Recommendation Icon -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/spacing_m"
                    android:src="@drawable/ic_rounded_lightbulb_24"
                    app:tint="?attr/colorOnSecondaryContainer" />

                <!-- Recommendation Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_recommendation"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:id="@+id/text_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:text="@string/smartshifts_loading_recommendation" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- WARNING SECTION (Conditional) -->
        <!-- ============================================ -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/warning_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorErrorContainer"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_medium"
            app:strokeColor="?attr/colorError"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_m">

                <!-- Warning Icon -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/spacing_m"
                    android:src="@drawable/ic_rounded_warning_24"
                    app:tint="?attr/colorOnErrorContainer" />

                <!-- Warning Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smartshifts_warning"
                        android:textAppearance="?attr/textAppearanceLabelLarge"
                        android:textColor="?attr/colorOnErrorContainer"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:id="@+id/text_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnErrorContainer"
                        android:text="@string/smartshifts_destructive_warning_default" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ============================================ -->
        <!-- CONFLICT STATISTICS (Additional Info) -->
        <!-- ============================================ -->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_m">

                <!-- Statistics Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smartshifts_conflict_statistics"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="@dimen/spacing_s" />

                <!-- Statistics Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Total Items -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_total_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/smartshifts_total_items"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Conflicts Count -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_conflicts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorError"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/smartshifts_conflicts"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Success Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/text_success_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorPrimary"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/smartshifts_success_rate"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>