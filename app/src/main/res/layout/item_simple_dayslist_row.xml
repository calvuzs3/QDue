<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_s">

    <TextView
        android:id="@+id/tday"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="18dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        tools:text="15" />

    <TextView
        android:id="@+id/twday"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="6"
        android:paddingStart="@dimen/spacing_s"
        android:paddingEnd="@dimen/spacing_s"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        tools:text="LUN" />

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="35dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp"
        tools:text="AB" />

    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="35dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp"
        tools:text="CD" />

    <TextView
        android:id="@+id/tt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="35dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp"
        tools:text="EF" />

    <TextView
        android:id="@+id/ttR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="35dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="GHI" />

    <!-- Events indicator - SEMPLICE come prima -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_events_indicator"
            android:layout_width="@dimen/spacing_l"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/spacing_s"
            android:layout_marginEnd="@dimen/spacing_s"
            android:background="@drawable/events_indicator_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/placeholder_calendar_day"
            android:textColor="?attr/colorPrimary"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="1"
            tools:visibility="visible" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>