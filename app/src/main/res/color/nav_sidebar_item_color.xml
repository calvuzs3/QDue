<?xml version="1.0" encoding="utf-8"?>
<!-- res/color/nav_sidebar_item_color.xml -->
<!-- SIMPLIFIED: Navigation item color selector with Material 3 states -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active/Selected state - Primary color for current section -->
    <item android:color="?attr/colorPrimary" android:state_checked="true" />

    <!-- Pressed state - Immediate feedback -->
    <item android:color="?attr/colorOnSecondaryContainer" android:state_pressed="true" />

    <!-- Focused state - Accessibility support -->
    <item android:color="?attr/colorPrimary" android:state_focused="true" />

    <!-- Hovered state - Mouse/trackpad support -->
    <item android:color="?attr/colorOnSurface" android:state_hovered="true" />

    <!-- Default state - Subtle but readable -->
    <item android:color="?attr/colorOnSurfaceVariant" />

</selector>