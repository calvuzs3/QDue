<?xml version="1.0" encoding="utf-8"?>
<!-- res/color/navigation_ripple_color.xml -->
<!-- SIMPLIFIED: Unified ripple effect for all navigation components -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active item ripple -->
    <item android:color="?attr/colorPrimary" android:alpha="0.12" android:state_checked="true" />

    <!-- Pressed ripple -->
    <item android:color="?attr/colorOnSurface" android:alpha="0.16" android:state_pressed="true" />

    <!-- Default ripple -->
    <item android:color="?attr/colorOnSurface" android:alpha="0.08" />

</selector>