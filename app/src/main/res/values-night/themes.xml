<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===== DARK THEME ===== -->

    <style name="Base.Theme.QDue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_dark_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_dark_variant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Material 3 specific -->
        <item name="colorPrimaryContainer">@color/primary_dark_theme</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_dark</item>
        <item name="colorSecondaryContainer">@color/background_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_background_dark</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/divider_dark</item>
        <item name="colorOutlineVariant">@color/divider_dark_light</item>

        <!-- Custom app attributes -->
        <item name="colorTodayBackground">@color/today_background</item>
        <item name="colorHeaderBackground">@color/surface</item>

        <item name="colorSundayBackground">@color/background_dark_sunday</item>
        <item name="colorOnSundayBackground">@color/on_background_dark_sunday</item>

        <item name="colorUserShift">@color/on_background_user_shift</item>
        <item name="colorUserShiftBackground">@color/background_user_shift</item>
        <item name="colorShiftFirst">@color/shift_morning_light</item>
        <item name="colorShiftSecond">@color/shift_afternoon_light</item>
        <item name="colorShiftThird">@color/shift_night_light</item>
        <item name="colorShiftFourth">@color/shift_night_light</item>
        <item name="colorShiftFifth">@color/shift_night_light</item>
        <item name="colorShiftSixth">@color/shift_night_light</item>
        <item name="colorShiftSeventh">@color/shift_night_light</item>
        <item name="colorShiftEighth">@color/shift_night_light</item>

        <!-- Loading colors -->
        <item name="colorLoadingBackground">@color/loading_dark_background</item>
        <item name="colorLoadingText">@color/loading_dark_text</item>
        <item name="colorLoadingProgress">@color/loading_dark_progress</item>

        <!-- Border and separator colors -->
        <item name="colorSeparator">@color/separator_dark</item>
        <item name="colorCardBackground">@color/cardview_dark_background</item>
        <item name="colorCardBorder">@color/cardview_dark_shadow_end_color</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- ActionBar/Toolbar attributes -->
        <item name="actionBarStyle">@style/Theme.QDue.ActionBar</item>
        <item name="toolbarStyle">@style/Theme.QDue.Toolbar</item>

        <!-- Material components customization -->
        <item name="materialButtonStyle">@style/Theme.QDue.Button</item>
        <item name="floatingActionButtonStyle">@style/Theme.QDue.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/Theme.QDue.CardView</item>

        <item name="android:textViewStyle">@style/Theme.QDue.TextView</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.QDue.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.QDue.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.QDue.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.QDue.Body2</item>
    </style>

    <!-- ===== COMPONENT STYLES - DARK THEME ===== -->

    <!-- TextView -->
    <style name="Theme.QDue.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minWidth">20dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.QDue.Body1</item>
    </style>

    <!-- FIXED: ActionBar theme with proper popup theme for dark mode menu -->
    <style name="Theme.QDue.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="windowActionBar">true</item>
        <item name="background">@color/primary_dark</item>
        <item name="titleTextColor">@color/on_primary_dark</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="android:titleTextStyle">@style/TextAppearance.QDue.ActionBar.Title</item>
        <item name="android:elevation">4dp</item>
        <!-- Fix: Apply dark popup theme to ActionBar menu -->
        <item name="popupTheme">@style/Theme.QDue.PopupOverlay</item>
    </style>

    <!-- FIXED: Toolbar Dark with proper popup theme reference -->
    <style name="Theme.QDue.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface_dark</item>
        <item name="titleTextColor">@color/on_primary_dark</item>
        <item name="subtitleTextColor">@color/on_surface_dark</item>
        <item name="android:elevation">4dp</item>
        <!-- Fix: Apply dark popup theme to toolbar menu -->
        <item name="popupTheme">@style/Theme.QDue.PopupOverlay</item>
    </style>

    <!-- Button Dark -->
    <style name="Theme.QDue.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- FloatingActionButton Dark -->
    <style name="Theme.QDue.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_variant</item>
        <item name="tint">@color/on_primary_dark</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- CardView Dark -->
    <style name="Theme.QDue.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- ===== SPECIAL APP STYLES ===== -->

    <!-- Calendar Day Style -->
    <style name="Theme.QDue.CalendarDay">
        <item name="android:background">@drawable/calendar_day_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Month Title Style -->
    <style name="Theme.QDue.MonthTitle" parent="TextAppearance.QDue.Headline2">
        <item name="android:background">@drawable/month_title_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.QDue.Headline3</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Shift Indicator Style -->
    <style name="Theme.QDue.ShiftIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- FIXED: Navigation Drawer Styles for Dark Mode -->
    <style name="Theme.QDue.NavigationView" parent="Widget.Material3.NavigationView">
        <!-- Use proper dark mode text colors -->
        <item name="itemTextColor">@color/on_surface_dark</item>
        <item name="itemIconTint">@color/on_surface_dark</item>
        <!-- Use dark surface background -->
        <item name="android:background">@color/surface_dark</item>
        <!-- Ensure selected item has proper contrast -->
        <item name="itemShapeFillColor">@color/primary_dark</item>
        <!-- Selected item text color -->
        <item name="itemTextAppearance">@style/TextAppearance.QDue.Navigation</item>
    </style>

    <!-- Navigation text appearance for better visibility -->
    <style name="TextAppearance.QDue.Navigation" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Theme.QDue.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
    </style>

    <!-- AlertDialog Style -->
    <style name="Theme.QDue.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.QDue.Headline2</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.QDue.Body1</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.QDue.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.QDue.Button.Outlined</item>
    </style>

    <!-- Outlined Button -->
    <style name="Theme.QDue.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/on_surface_dark</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- ===== PREFERENCES THEME ===== -->

    <!-- New theme for SettingsActivity with ActionBar -->
    <style name="Theme.QDue.Settings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Use same colors as main theme -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_variant</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>

        <!-- Visible status bar with coordinated color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Ensure window is not full-screen -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Custom ActionBar -->
        <item name="actionBarStyle">@style/Theme.QDue.ActionBar</item>
    </style>

    <!-- ===== FINALLY ===== -->

    <!-- Application theme Wrapper -->
    <style name="Theme.QDue" parent="Base.Theme.QDue" />

    <!-- NoActionBar theme -->
    <style name="Theme.QDue.NoActionBar" parent="Theme.QDue">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBarOverlay theme -->
    <style name="Theme.QDue.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
    </style>

    <!-- FIXED: PopupOverlay theme for ActionBar menu visibility in dark mode -->
    <style name="Theme.QDue.PopupOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <!-- Fix for popup menu background and text in dark mode -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">@color/on_surface_dark</item>
    </style>

    <!-- ===== TEXT APPEARANCES - DARK ===== -->

    <style name="TextAppearance.QDue.Headline1" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.QDue.Headline2" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Add missing Headline3 style -->
    <style name="TextAppearance.QDue.Headline3" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.QDue.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.QDue.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.QDue.ActionBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/on_background_dark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>