<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================ -->
    <!-- MATERIAL DESIGN 3 DARK THEME -->
    <!-- ============================================ -->

    <style name="Base.Theme.QDue" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- PRIMARY COLORS -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>

        <!-- SECONDARY COLORS -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>

        <!-- TERTIARY COLORS -->
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>

        <!-- ERROR COLORS -->
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>

        <!-- SURFACE COLORS -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorSurfaceTint">@color/md_theme_dark_surfaceTint</item>

        <!-- BACKGROUND COLORS -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>

        <!-- OUTLINE COLORS -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_dark_outlineVariant</item>

        <!-- INVERSE COLORS -->
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>

        <!-- SYSTEM COLORS -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>

        <!-- WINDOW ATTRIBUTES -->
        <item name="android:windowBackground">@color/md_theme_dark_background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- MATERIAL 3 SPECIFIC ATTRIBUTES -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">?attr/colorPrimary</item>
        <item name="elevationOverlayAccentColor">?attr/colorSecondary</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>

        <!-- ============================================ -->
        <!-- CUSTOM APP ATTRIBUTES (Dark Theme) -->
        <!-- ============================================ -->

        <!-- Today highlighting -->
        <item name="colorTodayBackground">@color/today_dark</item>
        <item name="colorOnTodayBackground">@color/on_today_dark</item>

        <!-- Sunday highlighting -->
        <item name="colorSunday">@color/md_theme_dark_error</item>
        <item name="colorSundayBackground">@color/sunday_dark</item>
        <item name="colorOnSundayBackground">@color/on_sunday_dark</item>

        <!-- User shift highlighting -->
        <item name="colorUserShift">@color/user_shift_dark</item>
        <item name="colorOnUserShift">@color/on_user_shift_dark</item>
        <item name="colorUserShiftBackground">?attr/colorTertiaryContainer</item>

        <!-- Shift colors (dark theme variants) -->
        <item name="colorShiftFirst">@color/shift_morning_dark</item>
        <item name="colorShiftSecond">@color/shift_afternoon_dark</item>
        <item name="colorShiftThird">@color/shift_night_dark</item>
        <item name="colorShiftFourth">@color/shift_rest_dark</item>
        <item name="colorShiftFifth">@color/shift_morning_dark</item>
        <item name="colorShiftSixth">@color/shift_afternoon_dark</item>
        <item name="colorShiftSeventh">@color/shift_night_dark</item>
        <item name="colorShiftEighth">@color/shift_rest_dark</item>

        <!-- Additional app colors -->
        <item name="colorLoadingBackground">?attr/colorSurfaceVariant</item>
        <item name="colorLoadingText">?attr/colorOnSurfaceVariant</item>
        <item name="colorLoadingProgress">?attr/colorPrimary</item>
        <item name="colorSeparator">?attr/colorOutlineVariant</item>
        <item name="colorCardBackground">?attr/colorSurface</item>
        <item name="colorCardBorder">?attr/colorOutline</item>

    </style>

    <!-- ============================================ -->
    <!-- DARK THEME COMPONENT OVERRIDES -->
    <!-- ============================================ -->

    <!-- TextView with Material 3 typography -->
    <style name="Widget.QDue.TextView" parent="Widget.MaterialComponents.TextView" >
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:minWidth">@dimen/column_min_width</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <!-- Toolbar with proper dark theme contrast -->
    <style name="Widget.QDue.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <!-- Dark theme specific -->
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="collapseIcon">?attr/colorOnSurface</item>
    </style>

    <!-- Button with Material 3 styling -->
    <style name="Widget.QDue.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
    </style>

    <!-- NavigationView with enhanced dark theme visibility -->
    <style name="Widget.QDue.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="itemShapeFillColor">?attr/colorSecondaryContainer</item>
        <item name="itemShapeAppearance">@style/ShapeAppearance.QDue.SmallComponent</item>
        <item name="itemVerticalPadding">12dp</item>
        <item name="itemHorizontalPadding">24dp</item>
        <!-- Dark theme specific enhancements -->
        <item name="itemRippleColor">?attr/colorOnSurface</item>
        <item name="subheaderColor">?attr/colorOnSurfaceVariant</item>
        <item name="dividerInsetStart">16dp</item>
        <item name="dividerInsetEnd">16dp</item>
    </style>

    <!-- BottomNavigationView with dark theme optimization -->
    <style name="Widget.QDue.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.QDue.BottomNavigationView.ActiveIndicator</item>
        <item name="elevation">3dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <!-- Dark theme specific -->
        <item name="itemRippleColor">?attr/colorOnSurface</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <!-- FAB with enhanced dark theme visibility -->
    <style name="Widget.QDue.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="tint">?attr/colorOnPrimaryContainer</item>
        <item name="fabSize">normal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.QDue.SmallComponent</item>
        <!-- Dark theme specific -->
        <item name="rippleColor">?attr/colorOnPrimaryContainer</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- Enhanced CardView for dark theme -->
    <style name="Widget.QDue.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardForegroundColor">?attr/colorOnSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.QDue.MediumComponent</item>
        <item name="cardElevation">2dp</item> <!-- Slightly higher elevation in dark theme -->
        <item name="contentPadding">16dp</item>
        <!-- Dark theme specific -->
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.QDue.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorSecondaryContainer</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.QDue.SmallComponent</item>
    </style>

    <!-- ============================================ -->
    <!-- SHAPE APPEARANCES -->
    <!-- ============================================ -->

    <style name="ShapeAppearance.QDue.SmallComponent" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.QDue.MediumComponent" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.QDue.LargeComponent" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- ============================================ -->
    <!-- OVERLAY THEMES (Dark Variants) -->
    <!-- ============================================ -->

    <!-- AppBar overlay for dark theme -->
    <style name="ThemeOverlay.QDue.AppBar" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="elevation">0dp</item>
        <!-- Ensure menu icons are visible in dark theme -->
        <item name="actionMenuTextColor">?attr/colorOnSurface</item>
        <item name="homeAsUpIndicator">?attr/colorOnSurface</item>
    </style>

    <!-- Popup overlay for dark theme -->
    <style name="ThemeOverlay.QDue.PopupMenu" parent="ThemeOverlay.Material3.Dark">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <!-- Enhanced visibility for dark theme -->
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlHighlight">?attr/colorOnSurface</item>
    </style>

    <!-- Dialog overlay for dark theme -->
    <style name="ThemeOverlay.QDue.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.QDue.HeadlineSmall</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.QDue.BodyLarge</item>
        <!-- Dark theme button styling -->
        <item name="buttonBarPositiveButtonStyle">@style/Widget.QDue.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.QDue.Button.Text</item>
    </style>

    <!-- ============================================ -->
    <!-- ADDITIONAL DARK THEME COMPONENT STYLES -->
    <!-- ============================================ -->

    <!-- Text button for dialogs in dark theme -->
    <style name="Widget.QDue.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <!-- ============================================ -->
    <!-- TYPOGRAPHY (Dark Theme Adjustments) -->
    <!-- ============================================ -->

    <!-- All text appearances inherit from light theme but with automatic color adaptation -->
    <!-- Material 3 handles color switching automatically through theme attributes -->

    <!-- Special case: Enhanced contrast for headings in dark theme -->
    <style name="TextAppearance.QDue.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <!-- Dark theme: slightly increased contrast -->
        <item name="android:shadowColor">?attr/colorSurface</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="TextAppearance.QDue.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <!-- Enhanced readability in dark theme -->
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- ============================================ -->
    <!-- FINAL APPLICATION THEME  DARK THEME -->
    <!-- ============================================ -->

    <style name="Theme.QDue.Settings" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.QDue.AppBar</item>
        <!-- Dark theme ActionBar -->
        <item name="android:actionBarStyle">@style/Widget.QDue.ActionBar.Dark</item>
    </style>

    <!-- ActionBar specifically for dark theme -->
    <style name="Widget.QDue.ActionBar.Dark" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">?attr/colorSurface</item>
        <item name="titleTextStyle">@style/TextAppearance.QDue.TitleLarge</item>
        <item name="subtitleTextStyle">@style/TextAppearance.QDue.BodyMedium</item>
        <!-- Ensure back button is visible -->
        <item name="homeAsUpIndicator">?attr/colorOnSurface</item>
    </style>

</resources>