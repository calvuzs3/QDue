<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================ -->
    <!-- QDUE THEME - MATERIAL 3 COLOR MAPPING -->
    <!-- Maps semantic QDue colors to Material 3 attributes -->
    <!-- ============================================ -->

    <style name="Theme.QDue" parent="Theme.Material3.DayNight">

        <!-- âœ… Floating Menu Attributes (LIGHT THEME) -->
        <item name="floatingMenuBackground">@color/grey_800</item>          <!-- Light background -->
        <item name="floatingMenuOnBackground">@color/grey_100</item>        <!-- Dark text on light -->
        <item name="floatingMenuPrimary">@color/blue_500</item>             <!-- Primary actions -->
        <item name="floatingMenuSelected">@color/blue_100</item>            <!-- Selected/hover state -->
        <item name="floatingMenuSurface">@color/grey_800</item>             <!-- Surface elements -->
        <item name="floatingMenuOnSurface">@color/grey_100</item>           <!-- Text on surface -->

        <!-- ============================================ -->
        <!-- MATERIAL 3 SYSTEM COLORS (Dynamic Colors Compatible) -->
        <!-- ============================================ -->

        <!-- PRIMARY PALETTE - QDue Royal Purple -->
        <item name="colorPrimary">@color/qdue_royal_purple</item>
        <item name="colorOnPrimary">@color/qdue_text_on_dark</item>
        <item name="colorPrimaryContainer">@color/qdue_royal_purple_container</item>
        <item name="colorOnPrimaryContainer">@color/qdue_royal_purple_dark</item>

        <!-- SECONDARY PALETTE - QDue Ocean Blue -->
        <item name="colorSecondary">@color/qdue_ocean_blue</item>
        <item name="colorOnSecondary">@color/qdue_text_on_dark</item>
        <item name="colorSecondaryContainer">@color/qdue_ocean_blue_container</item>
        <item name="colorOnSecondaryContainer">@color/qdue_ocean_blue_dark</item>

        <!-- TERTIARY PALETTE - Accent Colors -->
        <item name="colorTertiary">@color/qdue_info_blue</item>
        <item name="colorOnTertiary">@color/qdue_text_on_dark</item>
        <item name="colorTertiaryContainer">@color/qdue_info_light</item>
        <item name="colorOnTertiaryContainer">@color/qdue_text_primary</item>

        <!-- ERROR PALETTE - QDue Error Red -->
        <item name="colorError">@color/qdue_error_red</item>
        <item name="colorOnError">@color/qdue_text_on_dark</item>
        <item name="colorErrorContainer">@color/qdue_error_light</item>
        <item name="colorOnErrorContainer">@color/qdue_text_primary</item>

        <!-- SURFACE COLORS - Clean & Modern -->
        <item name="colorSurface">@color/qdue_card_white</item>
        <item name="colorOnSurface">@color/qdue_text_primary</item>
        <item name="colorSurfaceVariant">@color/qdue_card_grey</item>
        <item name="colorOnSurfaceVariant">@color/qdue_text_secondary</item>

        <!-- BACKGROUND COLORS -->
        <item name="android:colorBackground">@color/qdue_bg_gradient_light</item>
        <item name="colorOnBackground">@color/qdue_text_primary</item>

        <!-- OUTLINE COLORS - Borders & Dividers -->
        <item name="colorOutline">@color/qdue_border_medium</item>
        <item name="colorOutlineVariant">@color/qdue_border_light</item>

        <!-- ============================================ -->
        <!-- QDUE CUSTOM ATTRIBUTES MAPPING -->
        <!-- ============================================ -->

        <!-- Calendar Day States -->
        <item name="colorTodayBackground">@color/qdue_today_highlight</item>
        <item name="colorTodayBorder">@color/qdue_today_highlight</item>
        <item name="colorOnTodayBackground">@color/qdue_text_on_dark</item>

        <item name="colorUserShiftBackground">@color/qdue_user_day</item>
        <item name="colorUserShiftBorder">@color/qdue_user_day</item>
        <item name="colorOnUserShift">@color/qdue_text_on_dark</item>

        <item name="colorSundayBackground">@color/qdue_sunday_special</item>
        <item name="colorSundayBorder">@color/qdue_sunday_special</item>
        <item name="colorOnSundayBackground">@color/qdue_text_on_dark</item>

        <!-- Combined State Colors -->
        <item name="colorTodayUserBackground">@color/qdue_today_user</item>
        <item name="colorTodayUserBorder">@color/qdue_today_user</item>
        <item name="colorTodaySundayBackground">@color/qdue_today_sunday</item>
        <item name="colorUserSundayBackground">@color/qdue_user_sunday</item>

        <!-- Shift Type Colors (All 8 Required) -->
        <item name="colorShiftMorning">@color/qdue_morning_shift</item>
        <item name="colorShiftAfternoon">@color/qdue_afternoon_shift</item>
        <item name="colorShiftNight">@color/qdue_night_shift</item>
        <item name="colorShiftRest">@color/qdue_rest_shift</item>
        <item name="colorShiftFifth">@color/qdue_extra_shift_1</item>
        <item name="colorShiftSixth">@color/qdue_extra_shift_2</item>
        <item name="colorShiftSeventh">@color/qdue_extra_shift_3</item>
        <item name="colorShiftEighth">@color/qdue_extra_shift_4</item>

        <!-- Essential UI Colors -->
        <item name="colorCardBackground">@color/qdue_card_white</item>
        <item name="colorCardBorder">@color/qdue_border_light</item>
        <item name="colorLoadingBackground">@color/qdue_highlight_subtle</item>
        <item name="colorLoadingProgress">@color/qdue_royal_purple</item>

        <!-- ============================================ -->
        <!-- MATERIAL 3 COMPONENTS STYLING -->
        <!-- ============================================ -->

        <!-- System bars and navigation -->
        <item name="android:statusBarColor">@color/qdue_gradient_start</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Window and activity styling -->
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Component style applications -->
        <item name="floatingActionButtonStyle">@style/Widget.QDue.FloatingActionButton</item>
        <item name="toolbarStyle">@style/Widget.QDue.Toolbar.Enhanced</item>
        <item name="materialCardViewStyle">@style/Widget.QDue.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.QDue.BottomNavigationView</item>
        <item name="navigationViewStyle">@style/Widget.QDue.NavigationView</item>
        <item name="navigationRailStyle">@style/Widget.QDue.NavigationRail</item>

    </style>
</resources>