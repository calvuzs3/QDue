<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================ -->
    <!-- SIMPLE MENU ATTRIBUTES -->
    <!-- Essential attributes for menu styling -->
    <!-- ============================================ -->

    <!-- Floating Menu Color Attributes -->
    <declare-styleable name="FloatingMenuTheme">
        <attr name="floatingMenuBackground" format="color|reference" />
        <attr name="floatingMenuOnBackground" format="color|reference" />
        <attr name="floatingMenuPrimary" format="color|reference" />
        <attr name="floatingMenuSelected" format="color|reference" />
        <attr name="floatingMenuSurface" format="color|reference" />
        <attr name="floatingMenuOnSurface" format="color|reference" />
        <attr name="floatingMenuDestructive" format="color|reference" />
    </declare-styleable>




    <!-- ============================================ -->
    <!-- ESSENTIAL CUSTOM ATTRIBUTES ONLY -->
    <!-- Cleaned up to bare minimum for app functionality -->
    <!-- ============================================ -->

    <declare-styleable name="QDueTheme">

        <!-- Hierarchical State Colors (Priority: Today > User > Sunday) -->
        <attr name="colorTodayBackground" format="color|reference" />
        <attr name="colorTodayBorder" format="color|reference" />
        <attr name="colorOnTodayBackground" format="color|reference" />

        <attr name="colorUserShiftBackground" format="color|reference" />
        <attr name="colorUserShiftBorder" format="color|reference" />
        <attr name="colorOnUserShift" format="color|reference" />

        <attr name="colorSundayBackground" format="color|reference" />
        <attr name="colorSundayBorder" format="color|reference" />
        <attr name="colorOnSundayBackground" format="color|reference" />

        <!-- Combined State Colors -->
        <attr name="colorTodayUserBackground" format="color|reference" />
        <attr name="colorTodayUserBorder" format="color|reference" />
        <attr name="colorTodaySundayBackground" format="color|reference" />
        <attr name="colorUserSundayBackground" format="color|reference" />

        <!-- Shift Colors (All 8 Required) -->
        <attr name="colorShiftMorning" format="color|reference" />
        <attr name="colorShiftAfternoon" format="color|reference" />
        <attr name="colorShiftNight" format="color|reference" />
        <attr name="colorShiftRest" format="color|reference" />
        <attr name="colorShiftFifth" format="color|reference" />
        <attr name="colorShiftSixth" format="color|reference" />
        <attr name="colorShiftSeventh" format="color|reference" />
        <attr name="colorShiftEighth" format="color|reference" />

        <!-- Essential UI Colors -->
        <attr name="colorCardBackground" format="color|reference" />
        <attr name="colorCardBorder" format="color|reference" />
        <attr name="colorLoadingBackground" format="color|reference" />
        <attr name="colorLoadingProgress" format="color|reference" />

    </declare-styleable>

    <!-- ============================================ -->
    <!-- SIMPLIFIED COMPONENT ATTRIBUTES -->
    <!-- ============================================ -->

    <declare-styleable name="QDueCalendarDay">
        <attr name="dayNumber" format="integer" />
        <attr name="highlightState" format="enum">
            <enum name="none" value="0" />
            <enum name="today" value="1" />
            <enum name="userShift" value="2" />
            <enum name="sunday" value="3" />
            <enum name="todayUserShift" value="4" />
        </attr>
        <attr name="shiftColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="QDueShiftIndicator">
        <attr name="shiftType" format="enum">
            <enum name="morning" value="0" />
            <enum name="afternoon" value="1" />
            <enum name="night" value="2" />
            <enum name="rest" value="3" />
            <enum name="fifth" value="4" />
            <enum name="sixth" value="5" />
            <enum name="seventh" value="6" />
            <enum name="eighth" value="7" />
        </attr>
    </declare-styleable>

</resources>