<?xml version="1.0" encoding="utf-8"?><!-- ===== attrs.xml (res/values/attrs.xml) ===== -->
<resources>
    <!-- Q-Due Custom Attributes -->
    <declare-styleable name="QDueTheme">
        <attr name="colorBackground" format="color" />

        <attr name="colorTodayBackground" format="color|reference" />
        <attr name="colorUserShift" format="color|reference" />
        <attr name="colorUserShiftBackground" format="color|reference" />
        <attr name="colorSunday"   format="color" />
        <attr name="colorSundayBackground" format="color|reference" />
        <attr name="colorOnSundayBackground" format="color|reference" />

        <attr name="colorHeaderBackground" format="color|reference" />

        <!-- Colori per il Shift in CalendarView -->
        <attr name="colorShiftFirst" format="color|reference" />
        <attr name="colorShiftSecond" format="color|reference" />
        <attr name="colorShiftThird" format="color|reference" />
        <attr name="colorShiftFourth" format="color|reference" />
        <attr name="colorShiftFifth" format="color|reference" />
        <attr name="colorShiftSixth" format="color|reference" />
        <attr name="colorShiftSeventh" format="color|reference" />
        <attr name="colorShiftEighth" format="color|reference" />

        <!-- Colori per il Calendar -->
        <attr name="colorCalendarToday" format="color|reference" />
        <attr name="colorCalendarWeekend" format="color|reference" />
        <attr name="colorCalendarHeader" format="color|reference" />

        <!-- Colori per il caricamento -->
        <attr name="colorLoadingBackground" format="color" />
        <attr name="colorLoadingText" format="color" />
        <attr name="colorLoadingProgress" format="color" />

        <!-- Colori per i bordi e separatori -->
        <attr name="colorSeparator" format="color" />
        <attr name="colorCardBackground" format="color" />
        <attr name="colorCardBorder" format="color" />
    </declare-styleable>

</resources>